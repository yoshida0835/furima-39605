<%= turbo_frame_tag dom_id(@item, :like) do %>
  <% if user_signed_in? %>
    <% if @item.liked_by?(current_user)%>
      <%= link_to item_likes_path(@item.id), data: { turbo_method: :delete } do %>
        <%= image_tag "heart-pink.png", class: "favorite-heart-icon", width: "20", height: "20" %>
        <span style="color:rgb(249, 75, 0)">いいね！<%= @item.likes.count %></span>
      <% end %>
    <% else %>
      <%= link_to item_likes_path(@item.id), data: { turbo_method: :post } do %>
        <%= image_tag "heart-black.png", class: "favorite-heart-icon", width: "20", height: "20" %>
        <span style="color:rgb(249, 75, 0)">いいね！<%= @item.likes.count %></span>
      <% end %>
    <% end %>
  <% else %>
    <%= image_tag "heart-black.png", class: "favorite-heart-icon", width: "20", height: "20" %>
  <% end %>
<% end %>